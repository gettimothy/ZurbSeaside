"
I encapsulate a Zurb Example
"
Class {
	#name : #ZurbResponsiveEmbedAspectRatioExample,
	#superclass : #ZurbSubCategoryResponsiveEmbed,
	#category : #'Zurb-Examples-Core'
}

{ #category : #accessing }
ZurbResponsiveEmbedAspectRatioExample class >> displayOrder [
	^8002
]

{ #category : #accessing }
ZurbResponsiveEmbedAspectRatioExample class >> exampleName [

	^'Aspect Ratios'
]

{ #category : #accessing }
ZurbResponsiveEmbedAspectRatioExample class >> overview [
	^'<p>Add ratio classes to change the aspect ratio of responsive embeds. The default ratio is 4:3. The <code>.widescreen</code> class will change the container''s aspect ratio to 16:9.</p>
	'
	

	
]

{ #category : #accessing }
ZurbResponsiveEmbedAspectRatioExample class >> zurbUrl [
	^'https://foundation.zurb.com/sites/docs/responsive-embed.html#aspect-ratios'.

	
]

{ #category : #initialization }
ZurbResponsiveEmbedAspectRatioExample >> initialize [
	super initialize.
]

{ #category : #rendering }
ZurbResponsiveEmbedAspectRatioExample >> renderExampleOn: html [
	html zurbDiv
		beResponsiveEmbed;
		beWideScreen;
		with:[html zurbIFrame
				width: 560;
				height: 315;
				url:'https://www.youtube.com/embed/WUgvvPRH7Oc';
				frameborder: 0;
				allowFullScreen].
	
	html paragraph 
		with:[html text: 'The ratio classes are generated by the keys in the ' ; code: '$responsive-embed-ratios'; text: ' map in your settings file. Only the '; code: 'default' ; text:' key is required. You can, for example, make your default ratio 16:9, remove widescreen, and add other aspect ratios'].
		
		
	html zurbCallout
		beSecondary;
		with:[html html:' <pre><code class="scss"><span class="hljs-variable">$responsive-embed-ratios</span>: (
  default: <span class="hljs-number">16</span> by <span class="hljs-number">9</span>,
  vertical: <span class="hljs-number">9</span> by <span class="hljs-number">16</span>,
  panorama: <span class="hljs-number">256</span> by <span class="hljs-number">81</span>,
  square: <span class="hljs-number">1</span> by <span class="hljs-number">1</span>,
);</code></pre>'].
]
